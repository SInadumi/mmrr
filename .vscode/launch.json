    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: train.py (mmref)",
            "type": "debugpy",
            "request": "launch",
            "program": "./src/train.py",
            "console": "internalConsole",
            "env": {
                "DISABLE_CACHE": "",
                "OVERWRITE_CACHE": ""
            },
            "python": ".venv/bin/python",
            "args": [
                "--config-name=mmref_debug", // -cn
            ],
            "justMyCode": false,
        },
        {
            "name": "Debug: train.py (cohesion)",
            "type": "debugpy",
            "request": "launch",
            "program": "./src/train.py",
            "console": "internalConsole",
            "env": {
                "DISABLE_CACHE": "",
                "OVERWRITE_CACHE": ""
            },
            "python": ".venv/bin/python",
            "args": [
                "--config-name=cohesion_debug", // -cn
                "max_batches_per_device=4",
                "devices=[0]"
            ],
            "justMyCode": false,
        },
    ]
}
